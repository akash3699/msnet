@model IEnumerable<MyExam_190840820111.Models.NewsPaperTbl>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PaperList</title>
    <link href="~/scripts/bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/bootstrap.min.js"></script>
    <script src="~/scripts/jquery-1.10.2.min.js"></script>
</head>
<body>
    <h2 style="text-align:center">NewsPaper Details</h2>
    <h4 style="color:green">@ViewBag.message</h4>
    <table class="table">
        <tr>
            
            <th>
                Paper Name
            </th>
            <th>
               Price
            </th>
            <th>
                Editor
            </th>
            <th>
                No Of Readers
            </th>
            <th>
                Option
            </th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            
            <td>
                @Html.DisplayFor(modelItem => item.PaperName)
            </td>
            <td>
               Rs. @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EditorName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalNoOfReaders)k
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.PaperId }) 
               
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
